<section class="container m-0 ps-0 me-3" style="max-width:180px; height:100vh; position:sticky; top:0 ">
  <div class="icon-wrapper">
    <img src="/images/logo.svg" alt="logo-SVG" />
  </div>
  <div class="menu">
    <ul class="ps-0" style="list-style-type: none">
      <li class="ps-0">
        <a href="/tweets">
          <div class="icon">
            {{#ifCond route "home"}}
            <img src="/images/home-active.svg" alt="home-SVG" />
            {{else}}
            <img src="/images/home.svg" alt="home-SVG" />
            {{/ifCond}}
          </div>
        </a>
      </li>
      <li class="ps-0">
        <a href="/chatroom/notify">
          <div class="icon">
            {{#ifCond route "notify"}}
            <img src="/images/chatroom/noti-active.svg" alt="noti-SVG" />
            {{else}}
            <img src="/images/chatroom/noti.svg" alt="noti-SVG" />
            {{/ifCond}}
          </div>
        </a>
      </li>
      <li class="ps-0">
        <a href="/chatroom/public">
          <div class="icon">
            {{#ifCond route "public"}}
            <img src="/images/chatroom/public-active.svg" alt="public-SVG" />
            {{else}}
            <img src="/images/chatroom/public.svg" alt="public-SVG" />
            {{/ifCond}}
          </div>
        </a>
      </li>
      <li class="ps-0">
        <a href="/chatroom/private">
          <div class="icon">
            {{#ifCond route "private"}}
            <img src="/images/chatroom/private-active.svg" alt="private-SVG" />
            {{else}}
            <img src="/images/chatroom/private.svg" alt="private-SVG" />
            {{/ifCond}}
          </div>
        </a>
      </li>
      <li>
        <a href="/users/{{currentUser.id}}/tweets">
          <div class="icon">
            {{#ifCond route "profile"}}
            <img src="/images/profile-active.svg" alt="home-SVG" />
            {{else}}
            <img src="/images/profile.svg" alt="home-SVG" />
            {{/ifCond}}
          </div>
        </a>
      </li>
      <li>
        <a href="/settings">
          {{#ifCond route "settings"}}
          <img src="/images/setting-active.svg" alt="setting-SVG" />
          {{else}}
          <img src="/images/setting.svg" alt="setting-SVG" />
          {{/ifCond}}
        </a>
      </li>
      <li>
        <button type="button" class="btn p-0" data-bs-toggle="modal" data-bs-target="#tweetModal">
          <img src="/images/tweet-btn.svg" alt="tweet" />
        </button>
      </li>
    </ul>
  </div>
  <div class="logout-btn position-absolute bottom-0 start-0">
    <a href="/logout">
      <img src="/images/logout.svg" alt="logout" />
    </a>
  </div>
</section>

{{!-- modal --}}
<div class="modal fade" id="tweetModal" tabindex="-1" aria-labelledby="tweetModalLabel" aria-hidden="true">
  <div class="modal-dialog mx-auto" style="width:600px">
    <div class="modal-content mx-auto" style="width:600px">
      <div class="modal-header">
        <button type="button" style="border: none; background: none; padding: 0; margin: 0; cursor: pointer;"
          data-bs-dismiss="modal" aria-label="Close">
          <img src="/images/icon-close.svg" alt="" />
        </button>
      </div>
      <div class="modal-body position-relative" style="height:245px">
        <form action="/tweets" method="post" class="d-flex">
          <div class="avatar d-flex justify-content-center"
            style="width:50px; height:50px; border-radius:50%; background-color:#FF6600; overflow:hidden">
            <img src="{{currentUser.avatar}}" alt=""
              style="width:100%; height:100%; object-fit:cover; border-radius:50%" />
          </div>
          <input type="text" class="w-100" style="border:none; outline: none; background: none" placeholder="有什麼新鮮事?"
            name="description" required />
          <div class="position-absolute bottom-0 end-0 d-flex align-items-center">
            {{#if error_messages}}
            <p class="m-0" style="color:red;">{{error_messages}}</p>
            {{/if}}
            <button type="submit"
              style="border: none; background: none; padding: 0; margin: 15px; cursor: pointer; background-color:#FF6600; width:64px; height:40px; border-radius:50px; color:white">推文</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>